{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListAllMyBuckets"
            ],
            "Resource": [
                "arn:aws:s3:::*"
            ]
        },
        {
	    "Effect": "Allow",
	    "Action": [
		"s3:ListBucket"
	    ],
	    "Resource": [
		"arn:aws:s3:::<YOURSITE>"
	    ]
	},
        {
            "Effect": "Allow",
            "Action": [
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:PutObject",
                "s3:GetObjectAcl",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "arn:aws:s3:::<YOURSITE>/*"
            ]
        }
    ]
}
